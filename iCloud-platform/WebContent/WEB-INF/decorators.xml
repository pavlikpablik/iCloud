<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/*ajax=true*</pattern>  
        <pattern>/scripts/dojo/*</pattern>  
        <pattern>/struts/dojo/*</pattern>   
        <pattern>/resources/*</pattern>  
        <pattern>/index.jsp</pattern>
        <pattern>/WEB-INF/jsp/layout/*</pattern>
	    <pattern>*/*.action*</pattern> <!-- 排除所有的action请求 -->
    </excludes>
	
    <decorator name="content" page="content.jsp">
       <!--  <pattern>/*</pattern> -->
        <pattern>/WEB-INF/jsp/*/page.jsp</pattern>
      <!--   <pattern>/WEB-INF/jsp/*/*/page.jsp</pattern>
        <pattern>/WEB-INF/jsp/*/*/*/page.jsp</pattern> -->
    </decorator>
</decorators>
